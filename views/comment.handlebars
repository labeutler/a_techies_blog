{{!-- Create handlebar HTML to find post to comment on and post --}}
<div class="post card">
    <div class="card-header">
        <h2>{{post.title}}</h2>
        <div>
            <p>Created by {{post.User.name}} on {{format_date}}</p>
        </div>
    </div>
    <div class="card-body">
        {{post.comment}}
    </div>

    // If a comment is placed
    {{#if post.Comment}}
    <section class="card">
        <div class="card-header">
            <h3>Comment</h3>
        </div>
        <div class="card-body">
            {{#each post.Comment}}
            <div>
                <p>{{body}}</p>
            </div>
            {{/each}}
        </div>
    </section>
    {{/if}}

    // Adding a comment to a post
    <form id="newComment-form" method="POST" action="/comment">
        <div class="input-field">
            <label>Comment:</label>
            <textarea type="text" name="comment"></textarea>
        </div>
        <input type="hidden" name="post-id" value="{{post.id}}">
        <button type="submit">Add Comment</button>
    </form>
</div>
<script src="/js/comment.js"></script>