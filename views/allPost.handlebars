{{!-- Adding HTML handlebar to list all Posts added. --}}
<div class="post">
    {{#each post}}
    <div class="card-header flex-row justify-space-between">
        <h2>
            <a href="/post/{{id}}">{{title}}</a>
        </h2>
        <div>
            Posted by {{User.name}} on {{format_date}}
        </div>
    </div>
    <div class="card-body">
        {{body}}
    </div>
    {{/each}}
</div>

