{{!-- Create an HTML card for handlebars to edit a post --}}
<div class="post card">
    <div class="card-header">
        <h2>Edit Your Post</h2>
    </div>
    {{!-- edit title --}}
    <form id="editPost-form" class="card-body">
        <div class="form-group">
            <label for="post-title">Title</label>
            <input name="post-title" class="form-input" value="{{post.title}}" type="text" />
        </div>
        <div>
        <textarea name="post-title">{{post.post_title}}</textarea>
        </div>
    {{!-- edit body --}}
        <div class="form-group">
            <label for="post-text">Description</label>
            <input class="form-input" name="post-body" type="text" />
            <textarea name="post-text">{{post.post_text}}</textarea>
        </div>

        <div class="form-group">
            <button class="btn btn-primary" type="submit">Update</button>
             <button class="btn btn-primary" id="deleteBtn" type="delete">Delete</button>
        </div>
    </form>
</div>

<script src="/js/editPost.js"></script>