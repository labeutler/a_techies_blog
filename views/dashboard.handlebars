<section class="new-post-section">
    <button type="submit" class="btn" id="create-new-post">Add A New Post</button>
</section>

{{#if posts.length}}
<section>
    <h2>Personal Dashboard</h2>
    <ul class="post-list">
        {{#each posts as |post|}}
        <li>
            {{> post-info post}}
            <a href="'/dashboard/edit/{{post.id}}" class="edit-link">Edit Post</a>
        </li>
        {{/each}}
    </ul>
</section>
{{/if}}

<script src="/js/logout.js"></script>