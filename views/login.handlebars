{{!-- Create an HTML card for handlebars to login --}}
<div class="card">
    <div class="card-header">
        <h2>Login</h2>
    </div>
    <form id="login-form" class="card-body">
        <div class="form-group">
            <label for="username-login">Username:</label>
            <input class="form-input" id="username-login" type="text" />
        </div>
        <div class="form-group">
            <label for="password-login">Password:</label>
            <input class="form-input" id="password-login" type="text" />
        </div>
        <div class="form-group">
            <button class="btn btn-primary" type="submit">Login</button>
            <a type="button" href="/signup">Sign Up HERE!</a>
        </div>
    </form>
</div>

<script src="/js/login.js"></script>