{{!-- Create a card to signup --}}
<div class="card">
    <div class="card-header">
        <h2>Signup</h2>
    </div>
    <form id="signup-form" class="card-body">
        <div class="form-group">
            <label for="username-signup">Username:</label>
            <input class="form-input" id="username-signup" type="text" />
        </div>
        <div class="form-group">
            <label for="password-signup">Password:</label>
            <input class="form-input" id="password-signup" type="text" />
        </div>
        <div class="form-group">
            <button class="btn btn-primary" type="submit">Signup</button>
            <a type="button" href="/signup">Sign up HERE!</a>
        </div>
    </form>
</div>

<script src="/js/signup.js"></script>